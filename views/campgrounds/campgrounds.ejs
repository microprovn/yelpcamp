<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>
    
    
    <div ng-app="campgrounds" >
        <div ng-controller="CampgroundController as panel">
            <div class="row text-center" style="display:flex ; flex-wrap:wrap" >
                <div class="col-md-3 col-sm-6" ng-repeat="camp in panel.camps">
                    <div class="thumbnail">
                        <div>
                            <img class="image-thumbnail" ng-src="{{camp.image}}">
                        </div>
                        <div class="caption">
                            <h4>{{camp.name}}</h4>
                        </div>
                        <p>
                            <a id='modal-btn' href="/campgrounds/{{camp._id}}" class="btn btn-primary btn-large">More Info</a>
                           
                        </p>                       
                       
                      
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>



<% include ../partials/footer %>